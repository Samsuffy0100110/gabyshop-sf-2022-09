{% extends "base.html.twig" %}

{% block title %}Créer un mot de passe |
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				{% for shop in shops %}
					<h1 class="text-center mt-3 mb-3">Bienvenue
						{{ app.user.firstname }}
						sur
						{{ shop.name }}
					</h1>
				{% endfor %}
				<div class="card mb-5">
					<div class="card-header">
						<h3 class="card-title text-center p-3">Créer ton mot de passe et une addresse</h3>
					</div>
					<div class="card-body">
						{{ form_start(form) }}
						{{ form_row(form.plainPassword) }}
						{{ form_row(formAddress.name) }}
						{{ form_row(formAddress.adresse) }}
						{{ form_row(formAddress.complementAdresse) }}
						{{ form_row(formAddress.zipcode) }}
						{{ form_row(formAddress.city) }}
						{{ form_row(formAddress.country) }}
						{{ form_row(form.submit) }}
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
